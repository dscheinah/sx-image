{
    "name": "dscheinah/sx-image",
    "description": "A simple wrapper to the gd library to render jpeg images.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.1",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Sx\\Image\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sx\\ImageTest\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
